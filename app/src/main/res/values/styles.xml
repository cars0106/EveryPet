<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF9800</item>
        <item name="colorPrimaryDark">#FF9800</item>
        <item name="colorAccent">#FF9800</item>
        <!-- Custom Status Bar -->
        <item name="android:statusBarColor">#FF9800</item>
        <!-- No Title Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Bottom Navigation의 Title 크기와 관련-->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/komacon</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/komacon</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="prf_pic">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="prf">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_weight">0</item>
    </style>

    <!-- Bottom Navigation의 Icon과 Title의 사이를 조정하기 위해 사용-->
    <dimen name="design_bottom_navigation_height" tools:override="true">52dp</dimen>

</resources>
