<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.everypet.everypet">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".font.BaseActivity"></activity>
        <activity android:name=".ProfileAdderWriteActivity" />
        <activity android:name=".ProfileAdderChooseAnimalActivity"/>
        <activity android:name=".ProfileActivity"/>
        <activity android:name=".CommunityAdderWriteActivity" />
        <activity android:name=".CommunityAdderChooseAnimalActivity" />
        <activity android:name=".CommunityActivity" />
        <activity android:name=".DiaryAdderActivity" />
        <activity android:name=".DiaryActivity" />
        <activity android:name=".MemoAdderActivity" />
        <activity android:name=".MemoActivity" />
        <activity android:name=".ToDoAdderActivity" />
        <activity android:name=".ToDoActivity">
            <intent-filter>
                <action android:name=".LoginMainActivity" />
            </intent-filter>
        </activity>
        <activity android:name=".LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>