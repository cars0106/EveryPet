<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.everypet.everypet">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ProfileDescriptionActivity"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog" />
        <activity
            android:name=".MemoDescriptionActivity"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog" />
        <activity
            android:name=".CommunityDescriptionActivity"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog" />
        <activity android:name=".font.BaseActivity" />
        <activity android:name=".ProfileAdderWriteActivity" />
        <activity android:name=".ProfileAdderChooseAnimalActivity" />
        <activity
            android:name=".ProfileActivity"
            android:launchMode="singleTask" />
        <activity android:name=".CommunityAdderWriteActivity" />
        <activity android:name=".CommunityAdderChooseAnimalActivity" />
        <activity
            android:name=".CommunityActivity"
            android:launchMode="singleTask" />
        <activity android:name=".DiaryAdderActivity" />
        <activity
            android:name=".DiaryActivity"
            android:launchMode="singleTask" />
        <activity android:name=".MemoAdderActivity" />
        <activity
            android:name=".MemoActivity"
            android:launchMode="singleTask" />
        <activity android:name=".ToDoAdderActivity" />
        <activity
            android:name=".ToDoActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name=".LoginMainActivity" />
            </intent-filter>
        </activity>
        <activity android:name=".LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>